@model SzpitalWWW.Data.History.Platnosci
@{
    ViewData["Title"] = "Poczekalnia";
}


<hr />

<div class="row d-flex align-items-center justify-content-center" style="margin: 0px">
    <div class="col-md-4">
        <form asp-action="Rejestracja" enctype="multipart/form-data" id="FormUpload" class="was-validated">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="TytulPlatnosci" type="text" minlength="8" maxlength="20" class="form-control" placeholder="Imię i Nazwisko" required />
                <div class="valid-feedback">
                    OK
                </div>
                <div class="invalid-feedback">
                    Za mało znaków
                </div>
                <label asp-for="TytulPlatnosci" class="form-label">Imie </label>
                <span asp-validation-for="TytulPlatnosci" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">

                <input asp-for="imieNazw" id="Name" type="text" class="form-control" placeholder="Imię Nazwisko" required>
                <label asp-for="imieNazw" class="control-label">Miejscowość</label>
                <div class="valid-feedback">
                    OK
                </div>
                <div class="invalid-feedback">
                    Zle imie lub nazwisko
                </div>
                <span asp-validation-for="imieNazw" class="text-danger"></span>

            </div>

            <div class="form-floating mb-3">
                <textarea rows="4" asp-for="Data" type="text" class="form-control" placeholder="Data " required></textarea>
                <div class="valid-feedback">
                    OK
                </div>
                <div class="invalid-feedback">
                    Opisz
                </div>
                <label asp-for="Data" class="control-label">Data Usługi </label>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Usluga" type="number" class="form-control" placeholder="2" min="2" max="30" required />
                <div class="valid-feedback">
                    OK
                </div>
                <div class="invalid-feedback">
                    Wybierz rodzaj usługi
                </div>
                <label asp-for="Usluga" class="control-label">Rodzaj usługi</label>
                <span asp-validation-for="Usluga" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Dodaj rezerwacje prywatna" class="btn btn-primary" />
                <a class="btn btn-success" href="@Url.Action("Index", "Home")">Powrót</a>
            </div>
        </form>

    </div>
</div>