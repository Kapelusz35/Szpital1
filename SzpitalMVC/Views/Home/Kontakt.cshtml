@model SzpitalWWW.Data.CMS.Kontakt
@{
    ViewData["Title"] = "Poczekalnia";
}



<h1 class="text-center  d-flex align-items-center justify-content-center">Kontakt</h1>

<hr />

<div class="row  d-flex align-items-center justify-content-center">
    <b class="d-flex align-items-center justify-content-center">Napisz do nas wiadomość</b>

    <div class="col-md-4">
        <form asp-action="Newsletter" enctype="multipart/form-data" class="was-validated">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="EmailAdress" type="email" class="form-control" placeholder="email@email.com" required />
                <div class="valid-feedback">
                    OK
                </div>
                <div class="invalid-feedback">
                    Powinien być adres email
                </div>
                <label asp-for="EmailAdress" class="control-label">Adres Email</label>
                <span asp-validation-for="EmailAdress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Name" type="text" min-lenght="5" class="form-control" placeholder="nazwa" required />
                <div class="valid-feedback">
                    OK
                </div>
                <div class="invalid-feedback">
                    minimum 5 znaków
                </div>
                <label asp-for="Name" class="control-label">Twója wiadomość</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz się" class="btn btn-primary" />
                <a class="btn btn-success" asp-action="Index">Powrót</a>
            </div>
        </form>
    </div>
</div>


